# The code should run with any perl version.

# This function is used by makelib as, e.g.
#   whtgen -n 1 | simplop.pl

while ($line = <>) {

# simplify '[1 *' -> '['
    $line =~ s/\[1\s\*\s/\[/g;

# simplify '[0 * S' -> '[0'
    $line =~ s/\[0\s\*\sS/\[0/g;

# remove ' + 0'
    $line =~ s/\s\+\s0//g;

# simplify '[0 + ' -> '['
    $line =~ s/\[0\s+\+\s+/\[/g;

    print $line;
}
