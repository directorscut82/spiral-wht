# Makefile
#

CC=cc

# not sure what it is for. -Kang
# OPT_FLAGS=@OPT@
#

INSTALL_EXEC=${exec_prefix}/bin

CFLAGS=-O6 -fomit-frame-pointer -malign-double -fstrict-aliasing -mcpu=pentiumpro -I.. $(OPT_FLAGS) -DMEASURE_LOC='"$(INSTALL_EXEC)/wht_measure"'

all: ga

ga: main.c cross.o mutate.o fitness.o \
    indiv.o randtree.o tree.o hash.o rand.o tester.o ga.o main.o
	$(CC) $(CFLAGS) -o ga main.o cross.o ga.o mutate.o fitness.o \
	                      indiv.o randtree.o tree.o hash.o rand.o \
                              tester.o -L.. -lwht -lm

clean:
	rm -f *.o ga tester core
